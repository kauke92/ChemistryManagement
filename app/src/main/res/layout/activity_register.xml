<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff7f22">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_text"
        android:layout_centerVertical="true"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />



    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/button_register"
        android:layout_below="@+id/password2_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/firstname_text"
        android:hint="First Name"
        android:layout_above="@+id/surname_text"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2_text"
        android:hint="Repeat Password"
        android:layout_below="@+id/password_text"
        android:layout_alignLeft="@+id/password_text"
        android:layout_alignStart="@+id/password_text"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/surname_text"
        android:hint="Surname"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/firstname_text"
        android:layout_alignStart="@+id/firstname_text"
        android:layout_alignRight="@+id/firstname_text"
        android:layout_alignEnd="@+id/firstname_text"
        android:singleLine="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:hint="Email Address"
        android:layout_alignLeft="@+id/surname_text"
        android:layout_alignStart="@+id/surname_text"
        android:layout_above="@+id/password_text"
        android:singleLine="true" />
</RelativeLayout>